{
    "$id": "http://example.com/location_dps_reject",
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "msgId",
        "payload"
    ],
    "examples": [
        {
            "msgId": "pos_2",
            "payload": {
                "ipui": "02ea651bab",
                "sip_id": "4020",
                "dm_id": "dm1",
                "dps": {
                    "rej_reason": "hs_not_reachable"
                },
                "ble": {}
            }
        }
    ],
    "properties": {
        "msgId": { "$ref" : "file:json_ref/msgid.json"
        },
        "payload": {
            "$id": "#/properties/payload",
            "type": "object",
            "description": "Contains reject message data",
            "required": [
                "ipui",
                "sip_id",
                "dm_id",
                "dps",
                "ble"
            ],
            "properties": {
                "ipui": { "$ref": "file:json_ref/ipui.json" },
                "sip_id": { "$ref": "file:json_ref/sip_id.json" },
                "dm_id": { "$ref": "file:json_ref/dm_id.json" },
                "dps": {
                 
                    "$id": "#/properties/payload/properties/dps",
                    "type": "object",
                    "description": "DPS content reject message",
                    "required": [
                        "rej_reason"
                    ],
                    "properties": {
                        "rej_reason": { "$ref": "file:json_ref/location_rej_reason.json" }
                    }
                },
                "ble":  {"$ref": "file:json_ref/ble_empty.json" }
            }
        }
    }
}